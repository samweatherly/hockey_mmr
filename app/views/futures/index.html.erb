<div class='container'>
  <h1>Hockey MMR</h1>

  <% @futures.each do |f| %>
    <div>
      <%= f.away_team_name %> (<%= ((1 - f.expected_result) * 100).round(1) %>%) @ <%= f.home_team_name %> (<%= (f.expected_result * 100).round(1) %>%)  |  <%= f.date %>
      <p></p>
    </div>
  <% end %>
</div>

<div id='east-west' class='container'>
  <div id='teams-table-east' style="display:inline-block">
    <h3>Eastern Conference</h3>
    <% @filter = @teams.where(conference: "Eastern") %>
    <%= render "/teams/table" %>
  </div>
  <div id='teams-table-west' style="display:inline-block; margin-left: 100px">
    <h3>Western Conference</h3>
    <% @filter = @teams.where(conference: "Western") %>
    <%= render "/teams/table" %>
  </div>
</div>
